+{
+	if(availableTypes_.isEmpty()) {
+		availableTypes_ << Default;
+#if defined(Q_WS_MAC) && defined(HAVE_GROWL)
+		availableTypes_ << Growl;
+#endif
+#ifdef USE_DBUS
+		if(PsiDBusNotifier::isAvailable())
+			availableTypes_ << DBus;
+#endif
+	}
+	return availableTypes_;
+}
