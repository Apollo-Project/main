+		foreach(const QModelIndex& i, indexes) {
+			bool anim = data(i, ContactListModel::IsAnimRole).toBool();
+			if (anim) {
+				animIndexes_.insert(i, true);
+			}
+			else {
+				animIndexes_.remove(i);
+			}
+		}
+	}
+
+	if (animIndexes_.isEmpty()) {
+		animTimer_->stop();
+	}
+	else if(!animTimer_->isActive()) {
+		animTimer_->start();
+	}
+}
