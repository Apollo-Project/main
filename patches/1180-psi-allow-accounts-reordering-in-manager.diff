+void PsiContactList::setAccountsOrder(QList<PsiAccount*> accounts)
+{
+	int start = 0;
+	bool needSave = false;
+	foreach (PsiAccount *account, accounts) {
+		int index = accounts_.indexOf(account, start);
+		if (index != -1) {
+			accounts_.move(index, start);
+			if (index != start) {
+				needSave = true;
+			}
+			start++;
+		}
+	}
+	if (needSave) {
+		emit saveAccounts();
+	}
+}
