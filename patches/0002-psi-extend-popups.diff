+		d->gb_type->layout()->addWidget(rb);
+		l->addWidget(rb);
+		if(PopupManager::currentType() == type_)
+			rb->setChecked(true);
+	}
+
+	if(l->count() == 1)
+		d->gb_type->setVisible(false);
+
+	emit connectDataChanged(w);
+}
